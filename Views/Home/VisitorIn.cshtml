@{
    ViewData["Title"] = "Register New Visit";
}
<div>
    <h1 class="display-4">@ViewData["Title"]</h1>
    <form class="needs-validation" novalidate>
        <div class="row">
            <div class="col-6">
                <label for="visitorname">* Visitor Name</label>
                <input type="text" class="form-control" id="visitorname" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid visitor name is required.
                </div>
            </div>
            <div class="col-6">
                <label for="visitoremail">Visitor Email</label>
                <input type="text" class="form-control" id="visitoremail" placeholder="abcd@xyz.com" value="">
                <div class="invalid-feedback">
                    Valid email is required.
                </div>
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <label for="company">Company (Optional)</label>
                <input type="text" class="form-control" id="company" placeholder="" value="">
                <div class="invalid-feedback">
                    Valid company name is required.
                </div>
            </div>
            <div class="col-6">
                <label for="vehicleno">Vehicle No (Optional)</label>
                <input type="text" class="form-control" id="vehicleno" placeholder="" value="">
                <div class="invalid-feedback">
                    Valid vehicle no is required.
                </div>
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <label for="contactno">* Contact No. (Phone No.)</label>
                <input type="text" class="form-control" id="contactno" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid contact no is required.
                </div>
            </div>
            <div class="col-6">
                <label for="hostname">Host Name <span class="text-muted"></span>(Select from list)</span></label>
                @* <input type="text" class="form-control" id="hostname" placeholder="" value="" required> *@
                    <select class="form-control" id="hostname" name="hostname">
                        <option value="">Select Host Name</option>
                        <option value="1">One One One</option>
                        <option value="2">Two Two Two</option>
                        <option value="3">Three Three Three</option>
                    </select>
                <div class="invalid-feedback">
                    Valid Host Name is required.
                </div>
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <label for="hostemail">* Host email</label>
                <input type="text" class="form-control" id="hostemail" placeholder="" value="" required>
                <div class="invalid-feedback">
                    Valid email address is required.
                </div>
            </div>
            <div class="col-6">
                <label for="location">Visit Location (Optional)</label>
                <input type="text" class="form-control" id="location" placeholder="" value="">
                <div class="invalid-feedback">
                    Valid Location is required.
                </div>
            </div>
        </div>
        <div>&nbsp;</div>
        <div class="row">
            <div class="col-6">
                <label for="purpose">Visiting Purpose (Optional)</label>
                <input type="text" class="form-control" id="purpose" placeholder="" value="">
                <div class="invalid-feedback">
                    Valid purpose is required.
                </div>
            </div>
            <div class="col-6">
                &nbsp;
            </div>
        </div>

    </form>

    <div>&nbsp;</div>

    <div class="row">
        <div class="col-sm-3"></div>
        <div class="col-sm-6 text-center">
            <button type="button" class="btn btn-primary btn-lg" onclick="location.href='@Url.Action("SignIn", "Home")'">Sign In</button>
            <button type="button" class="btn btn-secondary btn-lg" onclick="location.href='@Url.Action("Index", "Home")'">Back to Home Page</button>
        </div>
        <div class="col-sm-3"></div>
    </div> 

    
</div>

<div>&nbsp;</div>
<div class="text-center">
    <p>This is our eVisitor Registration System. (TPL)</p>
</div>