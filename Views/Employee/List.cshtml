@model List<m_cls_Employee>

@{
	ViewData["Title"] = "List of Employee";
}

<div>
    <div><h1 class="display-4">List of Employees</h1></div>
    
    @* <div><h3 class="message">@TempData["Message"]</h3></div> *@
    @if(@TempData["Message"] != null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <strong>@TempData["Message"]</strong>
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    
    <div><a asp-controller="Employee" asp-action="Insert" class="linkbutton">Insert Emp:</a></div>
    <div>&nbsp;</div>
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Employee ID</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Title</th>
                    <th scope="col">Country</th>
                    <th scope="col" colspan="2" style="text-align: center;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td scope="row">@item.EmployeeID</td>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Title</td>
                        <td>@item.Country</td>
                        <td>
                            <a asp-controller="Employee" asp-action="Update" asp-route-id="@item.EmployeeID" class="linkbutton">Update</a>
                        </td>
                        <td>
                            <a asp-controller="Employee" asp-action="Delete" asp-route-id="@item.EmployeeID" class="linkbutton">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>